<h4>Search By Car Plate Number</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="CarPlateNumber" class="control-label">Car Plate Number:</label>
                <input name="CarPlateNumber" class="form-control" />
